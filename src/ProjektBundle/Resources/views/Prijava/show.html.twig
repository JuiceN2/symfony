{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Prijava</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Ime</th>
                <td>{{ entity.ime }}</td>
            </tr>
            <tr>
                <th>Priimek</th>
                <td>{{ entity.priimek }}</td>
            </tr>
            <tr>
                <th>Naslov</th>
                <td>{{ entity.naslov }}</td>
            </tr>
            <tr>
                <th>Enaslov</th>
                <td>{{ entity.enaslov }}</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>{{ entity.telefon }}</td>
            </tr>
            <tr>
                <th>Datumrojstva</th>
                <td>{{ entity.datumrojstva|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Datumdodajanja</th>
                <td>{{ entity.datumdodajanja|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Hobiji</th>
                <td>{{ entity.hobiji }}</td>
            </tr>
            <tr>
                <th>Profesionalnazgodovina</th>
                <td>{{ entity.profesionalnazgodovina }}</td>
            </tr>
            <tr>
                <th>Linkedinprofil</th>
                <td>{{ entity.linkedinprofil }}</td>
            </tr>
            <tr>
                <th>Linkdocv</th>
                <td>{{ entity.linkdocv }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('prijava') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('prijava_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
