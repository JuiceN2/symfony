{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Delovnomesto list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naziv</th>
                <th>Opis</th>
                <th>Zahteve</th>
                <th>Kajnudimo</th>
                <th>Datumveljavnosti</th>
                <th>Datumdodajanja</th>
                <th>Nujno</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('delovnomesto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.naziv }}</td>
                <td>{{ entity.opis }}</td>
                <td>{{ entity.zahteve }}</td>
                <td>{{ entity.kajnudimo }}</td>
                <td>{% if entity.datumveljavnosti %}{{ entity.datumveljavnosti|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datumdodajanja %}{{ entity.datumdodajanja|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nujno }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('delovnomesto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('delovnomesto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('delovnomesto_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
